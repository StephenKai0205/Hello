        <Button
            android:id="@+id/button60"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:text="back"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button61"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="24sp" />
    </LinearLayout>

