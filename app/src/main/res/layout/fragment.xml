<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
    android:id="@+id/fragment_main"
    android:name="com.example.hello.HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10" />
    <fragment
        android:id="@+id/fragment_func"
        android:name="com.example.hello.FuncFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" />
    <fragment
        android:id="@+id/fragment_setting"
        android:name="com.example.hello.settingFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" />
    <RadioGroup
        android:id="@+id/bottomGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

        </RadioButton>
        <RadioButton
            android:id="@+id/radioFunc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

        </RadioButton>
        <RadioButton
            android:id="@+id/radioSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

        </RadioButton>
    </RadioGroup>

</LinearLayout>
